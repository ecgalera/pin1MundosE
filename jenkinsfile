pipeline {
    agent any

    environment {
        // Define las credenciales de Docker Hub
        registryCredentials = credentials('USER_DOCKERHUB')
        dockerImage = 'egalera/node-app' // Nombre de tu imagen en Docker Hub
        dockerTag = '1.0' // Etiqueta de la versi√≥n de la imagen
    }

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    // Construye la imagen Docker
                    docker.build("${dockerImage}:${dockerTag}", "-f Dockerfile .")
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    // Autentica con Docker Hub y sube la imagen
                    docker.withRegistry('https://registry.hub.docker.com', registryCredentials) {
                        dockerImage.push("${dockerTag}")
                    }
                }
            }
        }
    }
}
