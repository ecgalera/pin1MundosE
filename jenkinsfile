pipeline {
    agent any
    environment{
        IMAGE = "node:18"
    }
    stages {
        stage("clone") {
            steps {
                git branch: 'main', url: 'https://github.com/ecgalera/pin1MundosE.git'
            }
        }
        stage("build") {
            steps {
                docker build 'docker run -d --name myNode ${IMAGE}'
            }
        }
        stage("OK") {
            steps {
                echo "Todo salio bien"
            }
        }
    }
}